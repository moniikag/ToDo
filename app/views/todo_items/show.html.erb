<%= link_to image_tag("glyphicons_edit.png"), edit_todo_list_todo_item_path(@todo_list, @todo_item), class: "edit-todo-item" %></br>
<p>
  TodoItem:
  <%= @todo_item.content %>
</p>
<p>
  Deadline:
  <% if @todo_item.deadline.present? %>
    <%= @todo_item.deadline.strftime('%d-%m-%Y %H:%M') %>
  <% else %>
    -
  <% end %>
</p>
<p>
  Tags:
  <% unless @todo_item.tag_list.blank? %>
    <%= @todo_item.tag_list %>
  <% else %>
    -
  <% end %>
</p>


<%= button_to 'Delete TodoItem', todo_list_todo_item_path(@todo_item.todo_list_id, @todo_item), method: :delete, data: { confirm: 'Are you sure?' }, id: "delete-todo-item", class: "danger" %> </br>
<%= link_to image_tag("back2.png", {id:"Back"}), todo_list_todo_items_path(@todo_list) %>

