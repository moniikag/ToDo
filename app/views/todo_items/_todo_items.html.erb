<% @todo_items.each do |todo_item| %>
  <tr id="todo_item_<%= todo_item.id %>">
    <td>
      <% if todo_item.completed? %>
        <%= todo_item.completed_at %>
      <% else %>
        <%= link_to "Mark Complete", complete_todo_list_todo_item_path(@todo_list, todo_item), { method: :patch, id: "mark-complete-link" } %>
      <% end %>
    </td>

    <td class="<%= 'urgent' if todo_item.urgent?%>">
      <%= todo_item.content %>
    </td>

    <td>
      <%= todo_item.tag_list %>
    </td>

    <td>
      <%= todo_item.deadline.strftime('%d-%m-%Y %H:%M') %>
    </td>

    <td>
      <%= link_to "Edit", edit_todo_list_todo_item_path(@todo_list, todo_item), id: "edit-todo-item-link"  %>
      <%= link_to "Delete", todo_list_todo_item_path(@todo_list, todo_item), method: :delete, data: { confirm: "Are you sure?" }, id: "delete-todo-item-link"  %>
    </td>
  </tr>
<% end %>
