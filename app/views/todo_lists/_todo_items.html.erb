<div id='title-plus-edit'>
  <div id="title">
    <%= @todo_list.title %>
  </div>
  <%= link_to raw("<i class='fa fa-plus-square-o' id='new-item'></i>"), new_todo_list_todo_item_path(@todo_list) %>
</div>
<ul>
  <div id='show-completed'><%= @todo_items_complete.count %> Completed</div>
  <div id="completed" class='invisible'>
    <% @todo_items_complete.each_with_index do |todo_item, index| %>
      <%= render :partial => "item_li", locals: { todo_item: todo_item, index: index } %>
    <% end %>
  </div>

  <div id="incomplete">
    <% @todo_items_incomplete.each_with_index do |todo_item, index| %>
        <%= render :partial => "item_li", locals: { todo_item: todo_item, index: index } %>
    <% end %>

    <li id="for-item">
      <div id="form-for-item" class="invisible">
        <%= form_for [@todo_list, TodoItem.new] do |f| %>
          <%= f.text_field :content, class: "text-field-in-list" %>
          <%= f.submit "Add new TodoItem", class: "invisible" %>
        <% end %>
      </div>
    </li>
  </div>
</ul>
