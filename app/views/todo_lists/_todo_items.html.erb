<div id="title">
<%= link_to "#{@todo_list.title}", edit_todo_list_path(@todo_list), id: "edit-todo-list" %>

<%= link_to image_tag("circle_plus.png"), new_todo_list_todo_item_path(@todo_list), id:"new-item" %>
</div>

<ul id="todo_items">
  <div id='show-completed'> Completed: <%= @todo_items_complete.count %></div>
  <div id="completed" class='invisible'>
    <% @todo_items_complete.each do |todo_item| %>
      <%= render :partial => "item_li", locals: { todo_item: todo_item} %>
    <% end %>
  </div>

  <div id="incomplete">
    <% @todo_items_incomplete.each do |todo_item| %>
        <%= render :partial => "item_li", locals: { todo_item: todo_item} %>
    <% end %>

    <li>
      <%= form_for [@todo_list, TodoItem.new] do |f| %>
        <%= f.text_field :content, class: "text-field-in-list" %>
        <%= f.submit "Add new TodoItem", class: "submit-in-list" %>
      <% end %>
    </li>
  </div>
</ul>
