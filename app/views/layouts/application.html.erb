<!DOCTYPE html>
<html>
<head>
  <title>TodoListsMVC</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <div id='transparent' class='invisible'></div>
  <header>
    <div id="nav">
      <ul>
        <% if current_user %>
          <li><%= link_to raw("<i class='fa fa-sign-out'></i>"), user_sessions_path, method: :delete, id: "log-out" %></li>
          <li><%= link_to "#{current_user.email}", edit_user_path(current_user), id: "edit-user-link" %></li>
        <% else %>
          <li><%= link_to "Sign Up", new_user_path, id: "sign-up" %></li>
          <li><%= link_to "Log In", new_user_sessions_path, id: "log-in" %></li>
          <div id="user-widget">
        <% end %>
      </ul>
<div>
  <% if current_user %>
    Welcome <strong><%= current_user.name %></strong>!
    <%= link_to "Sign out", signout_path, id: "sign_out_fb" %>
  <% else %>
    <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in_fb" %>
  <% end %>
</div>
    </div></br>
    <div id="flash-messages">
      <% flash.each do |type, message| %>
        <div class="alert flash <%= type %>">
          <%= message %>
        </div>
      <% end %>
    </div>
  </header>

  <div id='wraper'>
    <section id='main'>
      <%= yield %>
    </section>
  </div>
</body>
</html>
